    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/new_ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/new_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FloodAware"
        tools:targetApi="31">
        <activity
            android:name=".FloodhubActivity"
            android:exported="false" />
        <activity
            android:name=".NewsScreenActivity"
            android:exported="false" />
        <activity
            android:name=".SafetyList"
            android:exported="false" />
        <activity
            android:name=".WeatherUpdate"
            android:exported="false" />
        <activity
            android:name=".DevInfoScreen"
            android:exported="false" />
        <activity
            android:name=".SettingScreen"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false" />
        <activity
            android:name=".Intro"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>